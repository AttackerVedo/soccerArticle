<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:id="@+id/itemWriteTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="제목부분"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemWriterNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="작성자"
        android:textColor="@color/lightGray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemWriteTitle"
        app:layout_constraintTop_toBottomOf="@+id/itemWriteTitle" />

    <TextView
        android:id="@+id/itemWriteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="작성시간"
        android:textStyle="bold"
        android:textColor="@color/lightGray"
        app:layout_constraintStart_toEndOf="@+id/itemWriterNickname"
        app:layout_constraintTop_toTopOf="@+id/itemWriterNickname" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="조회"
        android:textColor="@color/lightGray"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/itemWriteTime"
        app:layout_constraintTop_toTopOf="@+id/itemWriteTime" />

    <TextView
        android:id="@+id/itemHitValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="0"
        android:textColor="@color/lightGray"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="댓글"
        android:textColor="@color/lightGray"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/itemHitValue"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/itemCommentValue"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/lightGray"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/darkGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />





</androidx.constraintlayout.widget.ConstraintLayout>